{% extends 'layout.html.twig' %}

{% block main %}

    {{ form_start(editPasswordForm) }}

    <div class="formlabel">
        <div>{{ form_label(editPasswordForm.oldPassword, 'Mot de passe actuel') }}</div>
        <div>{{ form_widget(editPasswordForm.oldPassword) }} </div>
        <div>{{ form_errors(editPasswordForm.oldPassword) }}</div>
    </div>

    <div class="formlabel">
        <div>{{ form_label(editPasswordForm.plainPassword.first, 'Nouveau mot de passe') }}</div>
        <div>{{ form_widget(editPasswordForm.plainPassword.first) }} </div>
        <div>{{ form_errors(editPasswordForm.plainPassword.first) }}</div>
    </div>

    <div class="formlabel">
        <div>{{ form_label(editPasswordForm.plainPassword.second, 'Confirmation du nouveau mot de passe') }}</div>
        <div>{{ form_widget(editPasswordForm.plainPassword.second) }} </div>
        <div>{{ form_errors(editPasswordForm.plainPassword.second) }}</div>
    </div>

    <button type="submit">Modifier le mot de passe !</button>

    {{ form_end(editPasswordForm) }}

{% endblock %}