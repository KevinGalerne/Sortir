{% extends "layout.html.twig" %}

{% block logo %}
    <h1>Afficher une sortie</h1>
{% endblock %}

{% block main %}

    <div class="card-container">
        {% for event in allEvents  %}
            <div class="card">
                <a href="{{ path('details_event', {'id': event.id }) }}">
                    <!-- Image -->
                    <div class="card-image">
{#
                        TODO: Peut etre mettre une image
#}
                    </div>
                    <!-- Fin de l'image -->

                    <!-- Corp de la carte -->
                    <div class="card-body">
                        <!-- Auteur et Date de publication-->
                        <div class="card-date">
                            Posted by {{ event.author.firstName}} {{ event.author.lastName }} - {{ event.creationDate | date('H:i:s d-m-Y') }}
                        </div>
                        <!-- Titre de l'article -->
                        <div class="card-title">
                            <h3>{{ event.name }}</h3>
                        </div>
                        <!-- Extrait de l'article -->
                        <div class="card-excerpt">
                            <p>{{ event.description }}</p>
                        </div>

                    </div>
                    <!-- Fin du corp de notre carte -->
                </a>
            </div>
        {% endfor %}
    </div>





{% endblock %}
