{% extends "layout.html.twig" %}

{% block logo %}
    <h1>Afficher une sortie</h1>
{% endblock %}

{% block main %}

    <div class="card-container">
        {% for  in  %}
            <div class="card">
                <a href="{{ path('', {'id': }) }}">
                    <!-- Image -->
                    <div class="card-image">

                    </div>
                    <!-- Fin de l'image -->

                    <!-- Corp de la carte -->
                    <div class="card-body">
                        <!-- Auteur et Date de publication-->
                        <div class="card-date">
                            Posted by {{ idea.author }} - {{ idea.dateCreated | format_datetime(locale='fr') }}
                        </div>
                        <!-- Titre de l'article -->
                        <div class="card-title">
                            <h3>{{ idea.title }}</h3>
                        </div>
                        <!-- Extrait de l'article -->
                        <div class="card-excerpt">
                            <p>{{ idea.description }}</p>
                        </div>

                    </div>
                    <!-- Fin du corp de notre carte -->
                </a>
            </div>
        {% endfor %}
    </div>





{% endblock %}
